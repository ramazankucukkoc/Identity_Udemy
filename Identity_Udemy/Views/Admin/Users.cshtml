@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<h2 >Üyeler</h2>
<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>User Id</td>
            <td>User Name</td>
            <td>Email</td>
            <td>Rol Atama</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count==0)
        {
            <tr>
                <td colspan="3">Hiçbir Üye Yoktur</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
             <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td user-roles="@item.Id"></td>
            <td> <a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Rol Ata </a> </td>
             </tr>
            }
        }
    </tbody>
</table>

